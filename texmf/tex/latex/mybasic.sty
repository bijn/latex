% mybasic.sty: Basic formatting.

% Package info ----------------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mybasic}[2017/03/13 Bijan Sondossi's basic style]

% Dependencies ----------------------------------------------------------------

\usepackage{amsmath, amssymb, etoolbox}

% Custom commands/environments ------------------------------------------------

% Note command
\newcommand{\note}[1]
           {\par\framebox{Note} #1\par}

% https://tex.stackexchange.com/questions/47400/
% Remove extra vertical space
\newcommand{\zerodisplayskips}{%
  \setlength{\abovedisplayskip}{0pt}%
  \setlength{\abovedisplayshortskip}{0pt}%
  \setlength{\belowdisplayskip}{0pt}%
  \setlength{\belowdisplayshortskip}{0pt}}

% Example environment
\newenvironment{example}[2]
               {\par\noindent\textbf{Example.} #1\par\noindent#2}
               {$\diamond$\par}

% Variables -------------------------------------------------------------------

\setlength{\parindent}{0pt}
\setlength{\parskip}{0pt}
\linespread{1.5} % double spacing

% Other settings --------------------------------------------------------------

\appto{\normalsize}{\zerodisplayskips}
\appto{\small}{\zerodisplayskips}
\appto{\footnotesize}{\zerodisplayskips}

\endinput

% end mybasic.sty
